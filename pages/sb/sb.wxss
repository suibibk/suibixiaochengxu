/* pages/sb/sb.wxss */
#first{
  height: 40px;
    /* background: #D7C8A2; */
    line-height: 40px;
    width: 100%;
    font-size: 18px;
    color: #724E33;
    overflow: hidden;
    background: #fff;
    border-bottom: 1px solid #eee;
    border-top: 1px solid #eee;
    position: fixed;
    top: 0;
    z-index: 1;
    text-align: center;
    
}
#first image {
    height: 25px;
    width: 44px;
    vertical-align: text-bottom;
}
.top{
  font-size: 18px;
  width: 100%;
  text-align: center;
  margin-bottom: 10px;
  margin-top: 50px;
}
.tops{
  display: inline-block;
  color: #231815;
  padding-bottom: 3px;
}
.top_span{
  margin-left: 5px;
  margin-right: 5px;
  width: 0px;
}
.choice {
    color: #231815;
    border-bottom: 1px solid #333;
    padding-bottom: 2px;
}
.nochoice {
    color: #A3A3A3;
    border-bottom: 0px solid #333;
}

#topic{
  width: 95%;
  margin: 0px auto;
  margin-bottom: 10px;
}
.topics{  
    width: 100%;
    border-bottom: 1px solid #B5B5B6;
    padding-bottom: 10px;
    margin-bottom: 20px;
}
.title{
    font-size: 18px;
    font-weight: 700;
    line-height: 1.5;
    background: #fff;
}
.time{
    color: #999;
    font-size: 13px;
    background: #fff;
}
.desc{
  color: #999;
  font-size: 13px;
  height: 50px;
  margin-bottom: 10px;
  margin-top: 10px;
  overflow: hidden;
  line-height: 24px;
  background: #fff;
}
.info{
  color: #999;
  font-size: 13px;
  background: #fff;
}
.info view{
  display: inline-block;
  margin-right: 5px;
}
.user image{
  height: 18px;
  width: 18px;
  vertical-align: middle;
  margin-right: 5px;
}
.tools{
  width: 100%;
  text-align: center;
  font-size: 14px;
  margin-bottom: 20px;
}
.more{
    width: 30%;
    text-align: center;
    background: #3DAF77;
    height: 25px;
    line-height: 25px;
    color: #fff;
    margin: 0px auto;
    font-size: 14px;
    border-radius: 10px;
    margin-top: 10px;
}
